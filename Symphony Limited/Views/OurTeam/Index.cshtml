@model IEnumerable<SymphonyLimited.DbContext.OurTeam_Tbl>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2>Team Members</h2>

<p>
    @Html.ActionLink("Create New", "Create", "ourteam", new { @class = "btn btn-primary" })
</p>
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header card-header-primary card-header-icon">
                <div class="card-icon">
                    <i class="material-icons">person</i>
                </div>
                <h4 class="card-title">Members</h4>
            </div>
            <div class="card-body">
                <div class="toolbar">
                    <!--        Here you can write extra buttons/actions for the toolbar              -->
                </div>
                <div class="material-datatables">
                    <div id="datatables_wrapper" class="dataTables_wrapper dt-bootstrap4">
                        <div class="row">
                            <div class="col-sm-12">
                                <table id="datatables" class="table table-striped table-hover dataTable dtr-inline collapsed" cellspacing="0" width="100%" style="width: 100%;" role="grid" aria-describedby="datatables_info">
                                    <thead>
                                        <tr role="row">
                                            <th class="sorting_asc" tabindex="0" aria-controls="datatables" rowspan="1" colspan="1" style="width: 46px;" aria-sort="ascending" aria-label="Name: activate to sort column descending">
                                                Profile
                                            </th>
                                            <th class="sorting_asc" tabindex="0" aria-controls="datatables" rowspan="1" colspan="1" style="width: 46px;" aria-sort="ascending" aria-label="Name: activate to sort column descending">
                                                @Html.DisplayNameFor(model => model.Title)
                                            </th>
                                            <th class="sorting" tabindex="0" aria-controls="datatables" rowspan="1" colspan="1" style="width: 61px;" aria-label="Position: activate to sort column ascending">
                                                @Html.DisplayNameFor(model => model.Role)
                                            </th>
                                            <th class="sorting" tabindex="0" aria-controls="datatables" rowspan="1" colspan="1" style="width: 61px;" aria-label="Position: activate to sort column ascending">
                                                Actions
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr role="row" class="">
                                                <td tabindex="0" class="sorting_1">
                                                    <img src="@Url.Content("~/images/Profiles/_"  + item.Title + "_.jpg")" class="img-fluid" width="150" height="200" />
                                                </td>
                                                <td tabindex="0" class="sorting_1">
                                                    @Html.DisplayFor(modelItem => item.Title)
                                                </td>
                                                <td tabindex="0" class="sorting_1">
                                                    @Html.DisplayFor(modelItem => item.Role)
                                                </td>
                                                <td>
                                                    <a href="@Url.Content("/ourteam/Edit/"+item.ID)" class="btn btn-link text-info btn-just-icon">
                                                        <i class="material-icons">edit</i>
                                                    </a>|

                                                    <a href="@Url.Content("/ourteam/details/"+item.ID)" class="btn btn-link text-warning btn-just-icon">
                                                        <i class="material-icons">dvr</i>
                                                    </a>|

                                                    <a href="@Url.Content("/ourteam/delete/"+item.ID)" class="btn btn-link text-danger btn-just-icon">
                                                        <i class="material-icons">close</i>
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>                                          
                    </div>
                </div>
            </div>
            <!-- end content-->
        </div>
        <!--  end card  -->
    </div>
    <!-- end col-md-12 -->
</div>
